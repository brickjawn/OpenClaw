{
  "version": 1,
  "defaults": {
    "security": "allowlist",
    "ask": "on-miss",
    "askFallback": "deny",
    "autoAllowSkills": false
  },
  "agents": {
    "main": {
      "security": "allowlist",
      "ask": "on-miss",
      "askFallback": "deny",
      "autoAllowSkills": true,
      "allowlist": [
        {
          "id": "workspace",
          "pattern": "~/event-promo-workspace/**"
        },
        {
          "id": "openclaw-repo",
          "pattern": "~/Projects/OpenClaw/**"
        },
        {
          "id": "event-repo",
          "pattern": "~/Projects/your-event-repo/**"
        }
      ]
    }
  }
}
